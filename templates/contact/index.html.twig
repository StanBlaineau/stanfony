{% extends 'base.html.twig' %}

{% block title %}Liste de contacts{% endblock %}

{% block content %}

    <h1>Liste des contacts</h1>

    <p>
        <a href="{{ path('contact_add') }}" class="btn btn-success">
            Créer un contact
        </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Passe sanitaire</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>#{{ contact.id }}</td>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.firstname }}</td>
                    <td>
                        {% if contact.sanitaryPass %}
                            oui
                        {% else %}
                            non
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" href="{{ path('contact_detail', {id: contact.id}) }}">
                            Détail
                        </a>
                        <a class="btn btn-sm btn-warning" href="{{ path('contact_update', {id: contact.id}) }}">
                            Modifier
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
