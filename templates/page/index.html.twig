{% extends 'base.html.twig' %}

{% block title %}{{ page.menuTitre }}{% endblock %}

{% block content %}
    <h1>{{ page.titre }}</h1>

    <div class="row">
        <div class="col-8">
            <div>{{ page.texte|raw }}</div>
            <div class="page-footer-texte mt-5">
                <p>
                    Page publi√©e le {{ page.datePublication|date('d-m-Y') }}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('page_edit', {id: page.id}) }}">
                            Editer la page
                        </a>
                    {% endif %}
                </p>
            </div>
        </div> <!-- .col -->
        <div class="col-4">
            {% if page.image %}
                <img src="{{ page.image }}" alt="{{ page.titre }}" class="img-fluid" />
            {% endif %}
        </div> <!-- .col -->
    </div> <!-- .row -->
{% endblock %}

{% block css %}
    <style>
        .page-footer-texte p,
        .page-footer-texte p a
        {
            font-size: 11px;
            color: #555;
        }
    </style>
{% endblock %}
