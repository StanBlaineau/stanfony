{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>MenuTitre</th>
                <td>{{ page.menuTitre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ page.image }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ page.texte }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ page.datePublication ? page.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ page.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ page.ordre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('page_index') }}">back to list</a>

    <a href="{{ path('page_edit', {'id': page.id}) }}">edit</a>

    {{ include('admin/page/_delete_form.html.twig') }}
{% endblock %}
